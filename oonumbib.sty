\def\@indval{\ref{@oobib:\MYindex}}
\DeclareOption{paperorder}{\def\@indval{\MYindex}}

\DeclareOption*{%
  \PassOptionsToPackage{\CurrentOption}{oobib}%
}

\ProcessOptions

\RequirePackage{oobib}

\renewcommand\@pstart{~[}
\renewcommand\@pend{]}
\renewcommand\@psep{,\hskip0pt} % \hskip allows it to linebreak there
\renewcommand\@pform[1]{%
  \@indval\nobreak%
}
\renewcommand\@tstart{[}
\renewcommand\@tend{]}
\renewcommand\@tsep{,\hskip0pt}
\renewcommand\@tform[1]{%
  \@indval\nobreak%
}

\renewcommand\bibtitle{\section*{References}}

\renewcommand\@fronttag{%
  [\@indval]\ }

\renewcommand\@normalfront[1][\@quote]{%
  \@fronttag%
  \@Listnamesdot{\MYauthors}%
  \ifnotempty{\MYtitle}{  #1{\MYtitle}\@.}%
}
